<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.bankz.controllers.EmployeeRegisterController"
      prefHeight="500.0" prefWidth="450.0" style="-fx-background-color: #f4f4f4;">
   <children>
      <HBox alignment="CENTER" prefHeight="80.0" style="-fx-background-color: #2d75e8;">
         <children>
            <Label text="BankZ - Employee Registration" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <GridPane hgap="12.0" maxWidth="350.0" vgap="16.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="First Name:" styleClass="form-label" />
                  <TextField fx:id="firstNameField" GridPane.columnIndex="1" styleClass="form-input" />
                  <Label text="Last Name:" GridPane.rowIndex="1" styleClass="form-label" />
                  <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="form-input" />
                  <Label text="Username:" GridPane.rowIndex="2" styleClass="form-label" />
                  <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="form-input" />
                  <Label text="Password:" GridPane.rowIndex="3" styleClass="form-label" />
                  <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="form-input" />
                  <Label text="Confirm Password:" GridPane.rowIndex="4" styleClass="form-label" />
                  <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="form-input" />
                  <Label text="Role:" GridPane.rowIndex="5" styleClass="form-label" />
                  <TextField fx:id="roleField" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="form-input" />
               </children>
            </GridPane>
            <Label fx:id="messageLabel" styleClass="message-label" />
         </children>
         <HBox alignment="CENTER" spacing="24.0">
            <Button fx:id="registerButton" onAction="#handleRegister" prefWidth="120.0" text="Register" styleClass="button-primary" />
            <Button fx:id="cancelButton" onAction="#handleCancel" prefWidth="120.0" text="Cancel" styleClass="button-secondary" />
         </HBox>
      </VBox>
   </children>
</VBox>
