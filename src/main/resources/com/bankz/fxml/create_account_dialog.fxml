<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bankz.controllers.CreateAccountDialogController" 
      stylesheets="@../styles/style.css" styleClass="dialog"
      alignment="CENTER" prefHeight="500.0" prefWidth="450.0" spacing="24.0">
    <padding>
        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
    </padding>
    
    <Label text="Create Account" alignment="CENTER" styleClass="dashboard-title">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>
    
    <VBox spacing="20.0">
        <VBox spacing="12.0">
            <Label text="Account Type:" styleClass="form-label" />
            <ComboBox fx:id="accountTypeComboBox" prefWidth="400.0" styleClass="form-input" prefHeight="40.0" />
        </VBox>
        
        <VBox spacing="12.0">
            <Label text="Initial Deposit (Optional):" styleClass="form-label" />
            <TextField fx:id="initialDepositField" promptText="Enter initial deposit amount" styleClass="form-input" prefHeight="40.0" />
        </VBox>
        
        <VBox spacing="12.0">
            <Label text="Description (Optional):" styleClass="form-label" />
            <TextField fx:id="descriptionField" promptText="Enter description" styleClass="form-input" prefHeight="40.0" />
        </VBox>
    </VBox>
    
    <HBox alignment="CENTER" spacing="24.0">
        <Button fx:id="createButton" onAction="#handleCreate" text="Create Account" styleClass="button-primary" prefWidth="150.0" />
        <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" styleClass="button-secondary" prefWidth="150.0" />
    </HBox>
    
    <Label fx:id="messageLabel" styleClass="message-label" wrapText="true" />
</VBox>