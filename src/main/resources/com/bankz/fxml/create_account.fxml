<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bankz.controllers.CreateAccountController" 
      stylesheets="@../styles/style.css" styleClass="login-screen"
      alignment="CENTER" prefHeight="450.0" prefWidth="450.0" spacing="24.0">
    <padding>
        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
    </padding>
    
    <Label text="Create Account" alignment="CENTER" styleClass="login-title">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <VBox spacing="16.0">
        <Label text="Customer ID:" styleClass="form-label" />
        <TextField fx:id="customerIdField" promptText="Enter customer ID" styleClass="form-input" prefHeight="40.0" />
        
        <Label text="Account Type:" styleClass="form-label" />
        <ComboBox fx:id="accountTypeComboBox" prefWidth="400.0" styleClass="form-input" prefHeight="40.0" />
        
        <Label text="Initial Balance (Optional):" styleClass="form-label" />
        <TextField fx:id="initialBalanceField" promptText="Enter initial balance" styleClass="form-input" prefHeight="40.0" />
    </VBox>
    
    <HBox alignment="CENTER" spacing="24.0">
        <Button fx:id="createButton" onAction="#handleCreate" text="Create" prefWidth="100.0" styleClass="button-primary" />
        <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" prefWidth="100.0" styleClass="button-secondary" />
    </HBox>
    
    <Label fx:id="messageLabel" styleClass="message-label" />
</VBox>